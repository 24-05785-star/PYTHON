import tkinter as tk
from tkinter import messagebox

root = tk.Tk()
root.title("Simple tkinter Demo")
root.geometry("300x200")

def show_message():
    name = name_entry.get()
    if name:
        messagebox.showinfo("Greeting", f"Hello, {name}!")
    else:
        messagebox.showwarning("Input Error", "Please enter your name!")

def clear_entry():
    name_entry.delete(0, tk.END)

def exit_app():
    root.quit()

title_label = tk.Label(root, text="Welcome to tkinter!", font=("Arial", 14))
title_label.pack(pady=10)

name_label = tk.Label(root, text="Enter your name:")
name_label.pack()

name_entry = tk.Entry(root, width=20)
name_entry.pack(pady=5)

button_frame = tk.Frame(root)
button_frame.pack(pady=10)

greet_button = tk.Button(button_frame, text="Greet", command=show_message)
greet_button.pack(side=tk.LEFT, padx=5)

clear_button = tk.Button(button_frame, text="Clear", command=clear_entry)
clear_button.pack(side=tk.LEFT, padx=5)

exit_button = tk.Button(button_frame, text="Exit", command=exit_app)
exit_button.pack(side=tk.LEFT, padx=5)

root.mainloop()
